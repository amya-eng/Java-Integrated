<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzs.mapper.UserMapper">                       <!-- 这个namespace对应的是接口的全限定名-->
    <select id="selectAll" resultType="User">
        select * from tb_user;
    </select>
    <select id="selectById" resultType="com.zzs.pojo.User">
        select * from tb_user where id=#{id};                    <!-- #{id}表示传入的参数，第一个id表示表字段-->
    </select>
</mapper>